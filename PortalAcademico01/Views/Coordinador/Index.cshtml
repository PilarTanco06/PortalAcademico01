@model IEnumerable<PortalAcademico01.Models.Curso>

@{
    ViewData["Title"] = "Panel de Coordinador";
}

<div class="container my-5">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2 style="color: #C41E3A;">
            üéì Panel de Coordinador
        </h2>
        <a asp-action="Crear" class="btn text-white btn-lg" style="background-color: #C41E3A;">
            + Crear Nuevo Curso
        </a>
    </div>

    @if (TempData["Success"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            <strong>‚úì</strong> @TempData["Success"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    @if (TempData["Error"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            <strong>‚úó</strong> @TempData["Error"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    <div class="card shadow">
        <div class="card-header text-white" style="background-color: #C41E3A;">
            <h5 class="mb-0">Gesti√≥n de Cursos</h5>
        </div>
        <div class="card-body p-0">
            <div class="table-responsive">
                <table class="table table-hover mb-0">
                    <thead class="table-light">
                        <tr>
                            <th>C√≥digo</th>
                            <th>Nombre</th>
                            <th>Cr√©ditos</th>
                            <th>Cupo</th>
                            <th>Horario</th>
                            <th>Matr√≠culas</th>
                            <th>Estado</th>
                            <th>Acciones</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var curso in Model)
                        {
                            var matriculasActivas = curso.Matriculas.Count(m => m.Estado != PortalAcademico01.Models.EstadoMatricula.Cancelada);
                            var porcentajeOcupacion = curso.CupoMaximo > 0 ? (matriculasActivas * 100.0 / curso.CupoMaximo) : 0;

                            <tr class="@(!curso.Activo ? "table-secondary" : "")">
                                <td><strong>@curso.Codigo</strong></td>
                                <td>@curso.Nombre</td>
                                <td class="text-center">@curso.Creditos</td>
                                <td>
                                    <span class="badge @(porcentajeOcupacion >= 100 ? "bg-danger" : porcentajeOcupacion >= 80 ? "bg-warning text-dark" : "bg-success")">
                                        @matriculasActivas / @curso.CupoMaximo
                                    </span>
                                </td>
                                <td class="small">
                                    @curso.HorarioInicio.ToString(@"hh\:mm") - @curso.HorarioFin.ToString(@"hh\:mm")
                                </td>
                                <td class="text-center">
                                    <a asp-action="Matriculas" asp-route-id="@curso.Id" class="badge bg-info text-white text-decoration-none">
                                        @curso.Matriculas.Count
                                    </a>
                                </td>
                                <td>
                                    @if (curso.Activo)
                                    {
                                        <span class="badge bg-success">Activo</span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-secondary">Inactivo</span>
                                    }
                                </td>
                                <td>
                                    <div class="btn-group btn-group-sm" role="group">
                                        <a asp-action="Editar" asp-route-id="@curso.Id" class="btn btn-outline-primary" title="Editar">
                                            ‚úèÔ∏è
                                        </a>
                                        <form asp-action="Desactivar" asp-route-id="@curso.Id" method="post" class="d-inline">
                                            <button type="submit" class="btn btn-outline-warning" title="@(curso.Activo ? "Desactivar" : "Activar")"
                                                    onclick="return confirm('¬øEst√°s seguro de @(curso.Activo ? "desactivar" : "activar") este curso?')">
                                                @(curso.Activo ? "üö´" : "‚úÖ")
                                            </button>
                                        </form>
                                        <a asp-action="Matriculas" asp-route-id="@curso.Id" class="btn btn-outline-info" title="Ver matr√≠culas">
                                            üë•
                                        </a>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>

    @if (!Model.Any())
    {
        <div class="alert alert-info text-center mt-4">
            <h5>No hay cursos registrados</h5>
            <p>Comienza creando el primer curso.</p>
        </div>
    }
</div>