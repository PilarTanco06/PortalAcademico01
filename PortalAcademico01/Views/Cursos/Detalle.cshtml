@model PortalAcademico01.Models.Curso

@{
    ViewData["Title"] = "Detalle del Curso";
    var cuposDisponibles = (int)ViewBag.CuposDisponibles;
}

<div class="container my-5">
    <div class="row justify-content-center">
        <div class="col-lg-8">
            <div class="card shadow-lg">
                <div class="card-header text-white py-3" style="background-color: #C41E3A;">
                    <h3 class="mb-0">@Model.Nombre</h3>
                    <small>Código: @Model.Codigo</small>
                </div>
                <div class="card-body p-4">
                    <div class="row mb-4">
                        <div class="col-md-6">
                            <h5 class="mb-3" style="color: #C41E3A;">Información del Curso</h5>
                            <p><strong>Código:</strong> @Model.Codigo</p>
                            <p><strong>Créditos:</strong> @Model.Creditos</p>
                            <p><strong>Cupo Máximo:</strong> @Model.CupoMaximo</p>
                        </div>
                        <div class="col-md-6">
                            <h5 class="mb-3" style="color: #C41E3A;">Horario y Disponibilidad</h5>
                            <p><strong>Horario:</strong> @Model.HorarioInicio.ToString(@"hh\:mm") - @Model.HorarioFin.ToString(@"hh\:mm")</p>
                            <p><strong>Cupos Disponibles:</strong> 
                                <span class="badge fs-6 @(cuposDisponibles > 0 ? "bg-success" : "bg-danger")">
                                    @cuposDisponibles
                                </span>
                            </p>
                        </div>
                    </div>

                    <hr>

                    @if (cuposDisponibles > 0)
                    {
                        <div class="alert alert-success">
                            <strong>✓ ¡Hay cupos disponibles!</strong> Puedes inscribirte en este curso.
                        </div>
                        <a href="#" class="btn text-white btn-lg w-100 py-3" style="background-color: #C41E3A;">
                            Inscribirse en este curso
                        </a>
                    }
                    else
                    {
                        <div class="alert alert-danger">
                            <strong>✗ Curso lleno.</strong> No hay cupos disponibles en este momento.
                        </div>
                        <button class="btn btn-secondary btn-lg w-100 py-3" disabled>
                            No disponible
                        </button>
                    }

                    <div class="mt-3">
                        <a asp-action="Catalogo" class="btn btn-outline-secondary w-100">
                            ← Volver al Catálogo
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>